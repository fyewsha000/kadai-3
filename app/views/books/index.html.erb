<% if @book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th width="150">Title</th>
			<th width="300">Opinion</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, format: 'jpg', size: "40x40", fallback: "no_image.jpg" %></td>
			<td><%=link_to book_path(book.id) do %>
				<p><%= book.title %></p>
			    <% end %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
		<%= paginate(@books) %>
	</tbody>
</table>


<h1>User info</h1>

<%= attachment_image_tag current_user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>

<p>name : <%= current_user.name %></p>

<p>introduction : <%= current_user.introduction %></p>

<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>


<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@book) do |f| %>
	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
<% end %>
<div class="container">
	<div class="row">

<% if @book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-3">
<br>
<h1>User info</h1>

<%= attachment_image_tag current_user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
	    <tbody>
		   <tr>
			  <th width="15">name</th>
			  <th width="30"><%= current_user.name %></th>
		   </tr>
		   <tr>
			  <th width="15">introduction</th>
			  <th width="30"><%= current_user.introduction %></th>
		   </tr>
	     </tbody>
        </table>
<%= link_to edit_user_path(current_user.id),class: "btn btn-default btn-block" do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="color:black"></span>
<% end %>


<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@book) do |f| %>
	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book',class: "btn btn-primary btn-block" %>
<% end %>
</div>

<div class="col-xs-9">
<br>
<h1>Books</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th width="100"></th>
			<th width="200">Title</th>
			<th width="500">Opinion</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(book.user) do %>
				<%= attachment_image_tag book.user, :profile_image, format: 'jpg', size: "40x40", fallback: "no_image.jpg" %>
					<% end %>
				</td>
			<td><%=link_to book_path(book.id) do %>
				<p><%= book.title %></p>
			    <% end %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
		<%= paginate @books %>
	</tbody>
</table>
</div>
</div>
</div>
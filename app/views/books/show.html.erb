<% if flash[:notice] %>
	<div class= "flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<br>
<br>

<h1>Book detail</h1>
<table>
	<thead>
		<tr>
			<th width="70"></th>
			<th width="150">Title</th>
			<th width="500">Opinion</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
            <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpg', size: "40x40", fallback: "no_image.jpg" %>
                <%= link_to @book.user.name, user_path(@book.user.id) %>
             </td>
            <td><%= @book.title %></td>
			<td><%= @book.body %></td>

			<% if @book.user.id == current_user.id %>

			<td><%= link_to "Edit", edit_book_path(@book) %></td>
			<td><%= link_to "Destroy", book_path(@book),method: :delete %></td>

			<% end %>
		</tr>
	</tbody>
</table>


<h1>User info</h1>

<%= attachment_image_tag @book.user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>

<p>name : <%= @book.user.name %></p>

<p>introduction : <%= @book.user.introduction %></p>

<% if @book.user.id == current_user.id %>
<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
<% end %>

<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@new_book) do |f| %>
<!-- errors message -->
   <% if @new_book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @new_book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
<% end %>

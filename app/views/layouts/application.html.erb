<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container">
      <span>Bookers</span>
        <% if user_signed_in? %>
      <ul class="nav  navbar-nav navbar-right">
          <li>
            <%= link_to user_path(current_user.id) do%>
            <i class="glyphicon glyphicon-home"></i> Home<% end %>
          </li>
          <li>
            <%= link_to users_path do%>
            <i class="glyphicon glyphicon-user"></i> Users<% end %>
          </li>
          <li>
            <%= link_to books_path do%>
            <i class="glyphicon glyphicon-book"></i> Books<% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do%>
            <i class="glyphicon glyphicon-log-out"></i> logout<% end %>
          </li>

        </li>
     </ul>

    <% else %>
      <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do%>
            <i class="glyphicon glyphicon-home"></i> Home<% end %>
          </li>
          <li>
            <%= link_to about_path do%>
            <i class="glyphicon glyphicon-link"></i> About<% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do%>
            <i class="glyphicon glyphicon-edit"></i> Sign up<% end %>
          </li>
           <li>
            <%= link_to user_session_path do%>
            <i class="glyphicon glyphicon-log-in"></i> login<% end %>
          </li>
      </ul>
    <% end %>
  </div>
  </nav>
    <%= yield %>
  </body>
</html>

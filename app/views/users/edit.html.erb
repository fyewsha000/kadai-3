<div class="container">
<br>
 <% if @user.errors.any? %>
  <div class="alert">
    <div class="count">
      <%= @user.errors.count %>errors prohibited this obj from being saved:
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<br>
<h2>User info</h2>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <%= f.attachment_field :profile_image %>
 </div>


  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
</div>

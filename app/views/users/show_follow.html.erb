<div class="col-xs-9">
  <br>
    <h1>Users</h1>
       <table class="table table-hover">
	       <thead>
	          <th>image</th>
	           <th>name</th>
		       <th colspan = "3"></th>
	        </thead>
	             <tbody>
	               <% @user.followings.each do |user| %>
	                <tr>
	                   <td><%= attachment_image_tag user, :profile_image, format: 'jpg', size: "60x60", fallback: "no_image.jpg" %></td>
	                   <td><%= user.name %></td>
	                   <td><%= link_to 'Show', user_path(user) %></td>
	                </tr>
	                <% end %>
                 </tbody>
                </table>
           </div>

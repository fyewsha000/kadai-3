<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<th><%= current_user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= current_user.introduction %></th>
		</tr>
	</tbody>
</table>



<h2>Users</h2>
<table class="table">
	<thead>
		<th>image</th>
		<th>name</th>
		<th colspan = "3"></th>
	</thead>
	<tbody>
	  <% @users.each do |user| %>
	  <tr>
	    <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50", fallback:"no_image.jpg" %></td>
	    <td><%= user.name %></td>
	    <td><%= link_to 'Show', user_path(user) %></td>
	  </tr>
	  <% end %>
    </tbody>
</table>
<div class="container">
	<div class="row">
	  <div class="col-xs-3">
<br>
  <h1>User info</h1>
     <%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>
      <table class="table">
	    <tbody>
		   <tr>
			  <th width="15">name</th>
			  <th width="30"><%= current_user.name %></th>
		   </tr>
		   <tr>
			  <th width="15">introduction</th>
			  <th width="30"><%= current_user.introduction %></th>
		   </tr>
	     </tbody>
        </table>
           <%= link_to edit_user_path(current_user.id),class: "btn btn-default btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="color:black"></span>
           <% end %>


  <h3>New book</h3>
	<!-- form_for -->
     <%= form_for(@book) do |f| %>
   <!-- errors message -->
      <% if @book.errors.any? %>
     <div class="alert">
  	    <div class="count">
  		   <%= @book.errors.count %>errors prohibited this book from being saved:
  	    </div>
          <ul>
             <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
           </ul>
      </div>
             <% end %>

	     <h5>Title</h5>
	       <%= f.text_field :title %>
	     <h5>Body</h5>
	       <%= f.text_area :body %>
	        <br>
	        <br>
	        <%= f.submit 'Create Book',class: "btn btn-primary btn-block" %>
     <% end %>
     </div>

          <div class="col-xs-9">
          	<br>
              <h1>Users</h1>
                <table class="table table-hover">
	              <thead>
		            <th>image</th>
		            <th>name</th>
		            <th colspan = "3"></th>
	              </thead>
	             <tbody>
	               <% @users.each do |user| %>
	                <tr>
	                   <td><%= attachment_image_tag user, :profile_image, format: 'jpg', size: "60x60", fallback: "no_image.jpg" %></td>
	                   <td><%= user.name %></td>
	                   <td><%= link_to 'Show', user_path(user) %></td>
	                   <td><%= render 'stats', user: user %></td>
	                   <td><%= render 'follow_form', user: user %></td>
	                </tr>
	                <% end %>
                 </tbody>
                </table>
           </div>
       </div>
</div>
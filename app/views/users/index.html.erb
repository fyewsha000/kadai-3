<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<th><%= current_user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= current_user.introduction %></th>
		</tr>
	</tbody>
</table>
<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@book) do |f| %>
<!-- errors message -->
   <% if @book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
<% end %>


<h2>Users</h2>
<table class="table">
	<thead>
		<th>image</th>
		<th>name</th>
		<th colspan = "3"></th>
	</thead>
	<tbody>
	  <% @users.each do |user| %>
	  <tr>
	    <td><%= attachment_image_tag user, :profile_image, format: 'jpg', size: "60x60", fallback: "no_image.jpg" %></td>
	    <td><%= user.name %></td>
	    <td><%= link_to 'Show', user_path(user) %></td>
	  </tr>
	  <% end %>
    </tbody>
</table>
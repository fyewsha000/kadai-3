<div class="container">
	<div class="row">
<% if flash[:notice] %>
	<div class= "flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="col-xs-3">
<br>
<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
	    <tbody>
		   <tr>
			  <th width="15">name</th>
			  <th width="30"><%= @user.name %></th>
		   </tr>
		   <tr>
			  <th width="15">introduction</th>
			  <th width="30"><%= @user.introduction %></th>
		   </tr>
	     </tbody>
        </table>
<% if @user.id == current_user.id %>
    <%= link_to edit_user_path(current_user.id),class: "btn btn-default btn-block" do %>
           <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="color:black"></span>
     <% end %>
<% end %>

<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@book) do |f| %>
<!-- errors message -->
   <% if @book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
<% end %>
</div>

<div class="col-xs-9">
<br>
<h1>Books</h1>
<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th width="150">Title</th>
			<th width="300">Opinion</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "40x40", fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(book.id) %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

</div>
</div>